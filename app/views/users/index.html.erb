  <div class='col-xs-3'>
  	    <h2>User info</h2>

    <table class='table'>
      <tbody>
      <tr>	<%= attachment_image_tag @user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
      </tr>
      <tr>
    	  <th>name</th>
    	  <th><%= @user.name %></th>
      </tr>
      <tr>
    	  <th>introduction</th>
    	  <th><%= @user.introduction %></th><br>
      </tr>
</tbody>
</table>
<div class='row'>
      <%= link_to ' ', edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"  %>
      </div>

<h1>New book</h1>

<%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Opinion</h4>
	<%= f.text_area :body %>

	<br><%= f.submit 'Create Book', :class=>"btn btn-primary col-xs-12" %>
</div>
<% end %>

  <div class='col-xs-9'>
<h2>Users</h2>
    <table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	    <% @users.each do |user| %>
		<tr><!-- 表示させたい内容 -->
		<td><%= attachment_image_tag user, :profile_image, class: "attachment user profile_image fallback", format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %></td>
		<td><%= user.name %></td>
		<td><%= link_to 'show', user_path(user.id) %></td>
		</tr>
		<% end %>
	</tbody>
</table>

</div>




