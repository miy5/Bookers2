<!DOCTYPE html>
<html>
  <head>
    <!-- Bootstrap取込 -->
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookers</title>

  </head>

  <body>

    <header class="navbar navbar-inverse cleafix">
        <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span>Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
              <!--ログイン済み-->
              <li><%= link_to 'Home', user_path(current_user.id), class: "glyphicon glyphicon-home home" %></li>
              <li><%= link_to 'Users', users_path, class: "glyphicon glyphicon-user users" %></li>
              <li><%= link_to 'Books', books_path, class: "glyphicon glyphicon-book books" %></li>
              <li><%= link_to 'logut', destroy_user_session_path, method: :delete,class: "glyphicon glyphicon-log-in log_out" %></li>
               <% else %>
               <!--ログアウト状態-->
              <li><a class="glyphicon glyphicon-home home" href="/"> Home</a></li>
              <li><%= link_to 'About', home_about_path, class: "glyphicon glyphicon-link about" %></li>
              <li><%= link_to 'sign up', new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %></li>
              <li><%= link_to 'login', new_user_session_path, class: "glyphicon glyphicon-log-in" %></li>
               <% end %>
          </ul>
        </nav>
        </div>
    </header>
    <div class="container">
      <p id="notice">
        <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
  </p>
      <div class="row">

      <!-- ↓diviseで作成したログイン機能 -->
        <%= yield %>
      </div>
    </div>

  <footer>
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
</footer>


  </body>
</html>
