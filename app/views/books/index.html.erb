<!-- 部分テンプレート -->
 <%= render 'users/list' %> 



 <div class='col-xs-9'>

<h2>Books</h2>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th></th>
		</tr>
	</thead>
	    <% @books.each do |book| %>
	<tbody>
		<tr><!-- 表示させたい内容 -->
		<td><%=link_to user_path(@user.id) do %><%= attachment_image_tag book.user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %><br><% @user.name %><% end %></td>
		<td><%=link_to book.title, book_path(book.id) %></td>
		<td><%= book.body %></td>
		</tr>
	</tbody>
		<% end %>

</table>
</div>